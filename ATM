import java.util.*;

public class ATM {
    static int balance = 10000;

    public void withdraw(int amt) {
        if (amt > balance) {
            System.out.println("Withdraw unsuccessful\nInsufficientFunds");
        } else {
            balance -= amt;
            System.out.println("Withdraw successful\nBalance is : " + balance);
        }
    }

    public void deposit(int amt) {
        balance += amt;
        System.out.println("Amount deposited\nBalance is :" + balance);
    }

    public void checkBalance() {
        System.out.println("Balance is :" + balance);
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int ch = 0;
        System.out.println("ATM");
        userData u = new userData();
        boolean a = u.getDetails();
        if (a) {
            do {
                int choice;
                System.out.println("1.Withdraw\n2.Deposit\n3.check Balance\n4.Display details\nEnter your choice : ");
                choice = sc.nextInt();
                switch (choice) {
                    case 1:
                        System.out.println("Enter amount to withdraw :");
                        int amt = sc.nextInt();
                        u.withdraw(amt);
                        break;
                    case 2:
                        System.out.println("Enter amount to deposit :");
                        int amount = sc.nextInt();
                        u.deposit(amount);
                        break;
                    case 3:
                        u.checkBalance();
                        break;
                    case 4:
                        u.display();
                    default:
                        System.out.println("Invalid option");
                        break;
                }
                System.out.println("Do you want to continue?");
                ch = sc.nextInt();
            } while (ch == 1);
        }
    }
}

class userData extends ATM {
    Scanner sc = new Scanner(System.in);
    String acctno, name;

    public boolean getDetails() {
        System.out.println("Enter your name :");
        name = sc.nextLine();
        System.out.println("Enter your account number :");
        acctno = sc.nextLine();
        return true;
    }

    public void display() {
        ATM a = new ATM();
        System.out.println("Name : " + name);
        System.out.println("Account Number :" + acctno);
        System.err.println("Balance :" + a.balance);
    }
}
